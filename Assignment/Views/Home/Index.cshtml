@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <!-- Button HTML (to Trigger Modal) -->
    <a href="#myModal" class="trigger-btn" data-toggle="modal">Click to Open Login Modal</a>
</div>

<!-- Modal HTML -->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-login">
        <div class="modal-content">
            <div class=" header">
                <h5 class="modal-title">Login</h5>
                <button type="button" class="close x" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <form  method="post">
                    <div class="form-group">
                        <i class="fa fa-user"></i>
                        <input type="text" id="Username" class="form-control" placeholder="Username" required="required">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-lock"></i>
                        <input type="password" id="Password" class="form-control" placeholder="Password" required="required">
                    </div>
                    <div class="form-group row">
                        <input type="button" onclick="Login()" class="col-3 InputLogin" value="Sign In">
                        <a href="#" class="col-7">Lost Your Password?</a>
                    </div>
                </form>
            </div>      
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        //Login
        function Login() {
            $.ajax({
                url: "https://demotestapi.catalist-me.com/api/Login/UserSignIn",
                method: "Post",
                contentType: "application/ json; charset = UTF - 8",
                dataType: "json",
                data: JSON.stringify({
                    username: $('#Username').val(),
                    password: $('#Password').val(),
                    langID: 1
                }),
                success: (data) => {
                    if (data.response.accessToken != undefined) {
                        localStorage.setItem("UserToken", data.response.accessToken)
                        window.location.href = '@Url.Content("~/Home/AllCountries")';
                    } else {
                        alert("Username OR Password Incorrect");
                    }
                }
            });
        }
    </script>


}